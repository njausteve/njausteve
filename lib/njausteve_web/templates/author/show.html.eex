<h1>Show Author</h1>

<ul>

  <li>
    <strong>First name:</strong>
    <%= @author.first_name %>
  </li>

  <li>
    <strong>Last name:</strong>
    <%= @author.last_name %>
  </li>

  <li>
    <strong>Bio:</strong>
    <%= @author.bio %>
  </li>

</ul>

<span><%= link "Edit", to: Routes.author_path(@conn, :edit, @author) %></span>
<span><%= link "Back", to: Routes.author_path(@conn, :index) %></span>
